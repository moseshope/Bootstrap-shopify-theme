<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="UTF-8"/>
    <meta content="IE=edge" http-equiv="X-UA-Compatible"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <link href="{{ 'favicon.png' | asset_url }}" rel="shortcut icon" type="image/png”"/>

    <title>{{ shop.name }}</title>

    <script async src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/@ionic/core/css/ionic.bundle.css" rel="stylesheet"/>

    <script async src="{{ 'vendor.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'vendor.css' | asset_url }}">

    <script defer src="{{ 'main.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'main.css' | asset_url }}">

    {{ content_for_header }}
  </head>
  <body class="layout-theme">

    <ion-app>
      <ion-split-pane content-id="main">
        <ion-menu content-id="main">
          <ion-header>
            <ion-toolbar>
              <ion-title>Menu</ion-title>
            </ion-toolbar>
          </ion-header>
          <ion-content>
            <ion-item href="/">
              <ion-label>
                Hello
              </ion-label>
            </ion-item>
          </ion-content>
        </ion-menu>

        <ion-router-outlet id="main">
          <ion-header>
            <ion-toolbar>
              <ion-buttons slot="start">
                <ion-menu-button></ion-menu-button>
              </ion-buttons>
              <ion-title size="large">{{ shop.name }}</ion-title>
            </ion-toolbar>
          </ion-header>
          <ion-content>
            {{ content_for_layout }}
          </ion-content>
        </ion-router-outlet>
      </ion-split-pane>
    </ion-app>

  </body>
</html>

