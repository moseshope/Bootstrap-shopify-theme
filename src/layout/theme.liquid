<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="UTF-8"/>
    <meta content="IE=edge" http-equiv="X-UA-Compatible"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <link href="{{ 'favicon.png' | asset_url }}" rel="shortcut icon" type="image/png”"/>

    <title>{{ shop.name }}</title>

    <script async src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/@ionic/core/css/ionic.bundle.css" rel="stylesheet"/>

    <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script defer src="{{ 'vendor.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'vendor.css' | asset_url }}">

    <script defer src="{{ 'main.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'main.css' | asset_url }}">

    {{ content_for_header }}
  </head>
  <body class="layout-theme">

    <ion-app>
      <ion-split-pane class="layout-theme__pane" content-id="main" when="xl">
        <ion-menu content-id="main" mode="md">
          <ion-header>
            <ion-toolbar>
              <ion-title>Menu</ion-title>
            </ion-toolbar>
          </ion-header>
          <ion-content>
            {% render 'main-menu' %}
          </ion-content>
        </ion-menu>

        <ion-router-outlet id="main" mode="md">
          <ion-header>
            <ion-toolbar>
              <ion-buttons slot="start">
                <ion-menu-button></ion-menu-button>
              </ion-buttons>
              <a class="layout-theme__brand" href="{{ routes.root_url }}">
                <ion-title>
                  {{ shop.name }}
                </ion-title>
              </a>
            </ion-toolbar>
          </ion-header>
          <ion-content>
            <div class="layout-theme__content">
              {{ content_for_layout }}
            </div>
          </ion-content>
        </ion-router-outlet>
      </ion-split-pane>
    </ion-app>

  </body>
</html>


<style code>
  .layout-theme {

    &__pane {
      --side-max-width: #{$side-width};
    }

    &__brand {
      text-decoration: none;
      color: inherit;
    }

    &__content {
      padding: 0 10px 70px;

      @media(max-width: 599px) {
        padding: 0 0 70px;
      }
    }
  }
</style>