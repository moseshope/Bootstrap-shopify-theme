<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="UTF-8"/>
    <meta content="IE=edge" http-equiv="X-UA-Compatible"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <link href="{{ 'favicon.png' | asset_url }}" rel="shortcut icon" type="image/png”"/>

    <title>{{ shop.name }}</title>

    <script defer src="{{ 'main.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'main.css' | asset_url }}">

    {{ content_for_header }}
  </head>
  <body class="layout-theme">

    <nav class="layout-theme__main-menu navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <a class="navbar-brand" href="{{ routes.root_url }}">{{ shop.name }}</a>
        <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarNavDropdown" data-toggle="collapse" type="button">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <!-- Left nav -->
          <ul class="nav navbar-nav mr-auto">
            {% for link in linklists.main-menu.links %}
              {%- if link.links == blank -%}
                <li class="nav-item">
                  <a class="nav-link {% if link.active %}active{% endif %}" href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% else %}
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle {% if link.child_active %}active{% endif %}" href="{{ link.url }}">
                    {{ link.title }}
                  </a>
                  <ul class="dropdown-menu">
                    {%- for child_link in link.links -%}
                      {%- if child_link.links == blank -%}
                        <li>
                          <a class="dropdown-item {% if child_link.active %}active{% endif %}" href="{{ child_link.url }}">
                            {{ child_link.title }}
                          </a>
                        </li>
                      {% else %}
                        <li class="dropdown">
                          <a class="dropdown-item dropdown-toggle {% if link.child_active %}active{% endif %}" href="{{ child_link.url }}">
                            {{ child_link.title }}
                          </a>
                          <ul class="dropdown-menu">
                            {%- for grandchild_link in child_link.links -%}
                              <li>
                                <a class="dropdown-item {% if grandchild_link.active %}active{% endif %}" href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </li>
                      {%- endif -%}
                    {%- endfor -%}
                  </ul>
                </li>
              {%- endif -%}
            {% endfor %}
          </ul>

          <!-- Right nav -->
                                                    <!-- <ul class="nav navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="bootstrap-4-navbar.html">Default</a>
              </li>
            </ul> -->
        </div>
      </div>
    </nav>

    <main class="layout-theme__main">
      {{ content_for_layout }}
    </main>
  </body>
</html>
