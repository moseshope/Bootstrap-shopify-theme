<div class="snippet-featured-slider card">
  <h4 class="card-header">{{ section.settings.title }}</h4>

  <div class="card-body carousel">
    <div class="snippet-featured-slider__swiper swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {%- assign item = all_products[block.settings[type]] -%}
          <div class="snippet-featured-slider__swiper-slide swiper-slide">
            {% render 'product-item' product: item %}
          </div>
        {% endfor %}
      </div>

      <button class="snippet-featured-slider__swiper-control carousel-control-prev" type="button">
        <span aria-hidden="true" class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="snippet-featured-slider__swiper-control carousel-control-next" type="button">
        <span aria-hidden="true" class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>
<!-- /.snippet-featured-slider -->