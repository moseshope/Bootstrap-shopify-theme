<div class="template-article global-content">
  <ion-card class="global-content__card">
    <img class="template-article__image" src="{{ article.image | img_url: '1024x1024' }}" width="1024" height="1024" alt="{{ article.title | escape }}">
    <ion-card-header>
      <ion-card-subtitle>Published at
        {{ article.published_at | date: format: 'abbreviated_date' }}</ion-card-subtitle>
      <ion-card-title>
        <h1 class="template-article__title">{{ article.title | escape }}</h1>
      </ion-card-title>
    </ion-card-header>
    <ion-card-content class="template-article__content">
      {{ article.content }}
    </ion-card-content>
  </ion-card>
</div>


<style code>
  .template-article {
    &__title {
      margin: 0;
    }

    &__image {
      width: 100%;
      height: 250px;
      object-fit: cover;
      border-bottom: 1px solid #dadada;

      @media(min-width: 600px) {
        height: 350px;
      }

      @media(min-width: 1000px) {
        height: 450px;
      }

      @media(min-width: 1600px) {
        height: 550px;
      }
    }

    &__content {
      padding-bottom: 30px;
    }
  }
</style>