<ion-grid class="template-list-collections">
  <ion-row>
    {% for collection in collections %}
      <ion-col size-lg="4" size-sm="6" size-xl="3" size-xs="12">
        <ion-card>
          {% if collection.image %}
            <img class="template-list-collections__image" class src="{{ collection | img_url: '450x450' }}" alt="{{ collection.image.alt }}"/>
          {% else %}
            <img class="template-list-collections__image" src="{{ collection.products.first | img_url: '450x450' }}" alt="{{ collection.title | escape }}"/>
          {% endif %}

          <ion-card-header>
            <ion-card-subtitle>
              {{ collection.products_count }}
              {{ collection.products_count | pluralize: 'Product', 'Products' }}
            </ion-card-subtitle>
            <ion-card-title>{{ collection.title }}</ion-card-title>
          </ion-card-header>
          <ion-card-content>
            {{ collection.description }}
          </ion-card-content>
        </ion-card>
      </ion-col>
    {% endfor %}
  </ion-row>
</ion-grid>

<style code>
  .template-list-collections {

    &__image {
      width: 100%;
      height: 250px;
      object-fit: cover;
    }
  }
</style>

